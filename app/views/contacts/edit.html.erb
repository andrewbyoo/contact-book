<div class="card">
  <div class="card-header">
    <h1>Editing contact</h1>
  </div>
  <div class="card-body">
    <%= render "form", contact: @contact %>
    <br>
    <%= button_to "Delete", @contact, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-outline-danger" %>
  </div>
</div>

<br>

<div>
  <%= link_to "Show this contact", @contact %> |
  <%= link_to "Back to contacts", contacts_path %>
</div>
