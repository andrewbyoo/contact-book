<style>
  .contact-link:link {text-decoration: none;}
  .contact-link:hover {text-decoration: underline;}
</style>

<br>
<table class="table table-striped table-bordered table-hover align-middle" id="contacts">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <% if contact.user == current_user %>
        <tr>
          <td><%= link_to contact.first_name + " " + contact.last_name, contact, class:"contact-link" %></td>
          <td><%= contact.email %></td>
          <td><%= contact.phone %></td>
          <td class="text-center"><%= button_to "X", contact, method: :delete, class:"btn btn-secondary" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
