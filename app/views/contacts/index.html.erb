<p style="color: green"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-striped table-bordered table-hover align-middle" id="contacts">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td class="text-center"><%= link_to "View", contact, class:"btn btn-secondary" %></td>
        <td class="text-center"><%= link_to "Edit", edit_contact_path(contact), class:"btn btn-secondary" %></td>
        <td class="text-center"><%= button_to "X", contact, method: :delete, class:"btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
